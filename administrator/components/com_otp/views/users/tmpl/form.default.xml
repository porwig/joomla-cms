<form
    type="browse"
    show_header="1"
    show_filters="1"
    show_pagination="1"
    norows_placeholder="COM_OTP_COMMON_NORECORDS"
>
    <headerset>
		<header name="id" type="rowselect" tdwidth="20" />
		<header name="name" type="field" sortable="true" />
		<header name="username" type="field" sortable="true" />
		<header name="email" type="field" sortable="true" />
		<header name="otpEnabled" type="fieldselectable" sortable="false" tdwidth="10%">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</header>
		<header name="otpMethod" type="fieldselectable" sortable="false" tdwidth="20%">
			<option value="totp">COM_OTP_OTPMETHOD_TOTP</option>
			<option value="yubi">COM_OTP_OTPMETHOD_YUBI</option>
		</header>
		<header name="lastvisitDate" type="field" sortable="true" tdwidth="15%" />
		<header name="registerDate" type="field" sortable="true" tdwidth="15%" />
		<header name="id" type="field" tdwidth="20" label="ID" id="num" />

		<header name="search" type="filtersearchable" placeholder="COM_OTP_FILTER_SEARCH" />
    </headerset>

    <fieldset name="items">
		<field name="id" type="selectrow" />

		<field name="name" type="text"
			translate="false"
			show_link="true"
			url="index.php?option=com_otp&amp;view=user&amp;id=[ITEM:ID]"
		 />

		 <field name="username" type="text"
			translate="false"
			show_link="true"
			url="index.php?option=com_otp&amp;view=user&amp;id=[ITEM:ID]"
		 />

		 <field name="email" type="text"
			translate="false"
			show_link="true"
			url="index.php?option=com_otp&amp;view=user&amp;id=[ITEM:ID]"
		 />

		 <field name="otpEnabled" type="list" sortable="true" tdwidth="10%">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		 </field>

		 <field name="otpMethod" type="list">
			<option value="none">COM_OTP_OTPMETHOD_NONE</option>
			<option value="totp">COM_OTP_OTPMETHOD_TOTP</option>
			<option value="yubi">COM_OTP_OTPMETHOD_YUBI</option>
		</field>

		 <field name="lastvisitDate" type="text" />

		 <field name="registerDate" type="text" />
		 
		<field name="id" type="text" label="#" id="num" />		 
    </fieldset>
</form>